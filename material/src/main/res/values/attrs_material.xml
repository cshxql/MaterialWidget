<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="LButtonStyle">
        <attr name="widget_animColor" format="reference|color" />
        <attr name="widget_background" format="reference|color" />
        <attr name="widget_delayclick" format="boolean" />
        <attr name="widget_type">
            <enum name="normal" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="center" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="PreferenceStyle">
        <attr name="preference_title" format="string" />
        <attr name="preference_summary" format="string" />
        <attr name="preference_checked" format="boolean" />
        <attr name="preference_show_divider" format="boolean" />
    </declare-styleable>

    <style name="PreferenceCategoryStyle">
        <!-- <item name="android:background">#e1e1e0</item> -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/preference_title_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/preference_category_height</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>