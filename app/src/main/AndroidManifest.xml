        <activity android:name="com.lion.demo.material.activity.LButtonActivity" />
        <activity android:name="com.lion.demo.material.activity.LImageButtonActivity" />
        <activity android:name="com.lion.demo.material.activity.LFrameLayoutActivity" />
        <activity android:name="com.lion.demo.material.activity.LPreferenceActivity" />
        <activity android:name="com.lion.demo.material.activity.LDialogActivity" />
